<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
      "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
      "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	
	<!-- 정적 페이지 -->
	<definition
		name="/*/common/*"
		extends="layout.{1}.sub">
		<put-attribute
			name="content"
			expression="/WEB-INF/jsp/iosf/com/common/{1}/{2}.jsp" />
	</definition>

	<!-- 정적 페이지 (팝업용) -->
	<definition
		name="/*/common/popup/*"
		extends="layout.{1}.popup">
		<put-attribute
			name="content"
			expression="/WEB-INF/jsp/iosf/com/common/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>
